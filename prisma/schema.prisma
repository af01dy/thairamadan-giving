generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cause {
  id          String   @id @default(uuid())
  title       String
  description String
  infoUrl     String

  bankName    String
  bank        String

  category    String
  tags        String[]
  imgUrl      String
  isActive    Boolean  @default(true)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([isActive])
}
